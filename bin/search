#!/usr/bin/env node

var exec = require('child_process').exec
  , args = process.argv.slice(2).join(' ')

if (args) {
  exec("xdg-open 'https://duckduckgo.com/?q=" + encodeURIComponent(args) + "'")
} else {
  console.log()
  console.log("  Usage:")
  console.log()
  console.log("    $ search <query>")
  console.log()
}
