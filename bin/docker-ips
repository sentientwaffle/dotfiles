#!/usr/bin/env bash

fmt_ip="{{.NetworkSettings.IPAddress}}"
fmt_name="{{.Name}}"
fmt_image="{{.Config.Image}}"
if [[ -n "$1" ]]; then
	sudo docker inspect --format "$fmt_ip" "$1"
fi

# List ips of currently running dockers.
while read container; do
	sudo docker inspect --format "$container  $fmt_ip  $fmt_name  $fmt_image" "$container"
done < <(sudo docker ps --format '{{.ID}}')
