# Reference:
#   .conkyrc:  http://conky.sourceforge.net/config_settings.html
#   variables: http://conky.sourceforge.net/variables.html

background no
use_spacer none
out_to_console yes
out_to_x no
out_to_stderr no

update_interval 10.0
cpu_avg_samples 3
net_avg_samples 3
no_buffers yes

TEXT
<span foreground="\#ffff00">/=${fs_used_perc /}%</span> \
<span foreground="\#ffff00">/home=${fs_used_perc /home}%</span> \
${if_match "${swapperc}" != "No swap"} \
 <span foreground="\#ff6600">swap=$swapperc%</span> \
${endif} \
<span foreground="\#ff3399">ram=${memperc}%</span> \
<span foreground="\#ff6600">cpu=${cpu}%</span> \
<span foreground="\#33ffff">↑${upspeed eth0}</span> \
<span foreground="\#33ffff">↓${downspeed eth0}</span> \
<span foreground="\#00ff33">bat=${battery_percent}%</span> \
